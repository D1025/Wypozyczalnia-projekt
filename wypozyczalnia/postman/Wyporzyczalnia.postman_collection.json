    {
      "name": "Negative tests (errors)",
      "item": [
        {
          "name": "401 Unauthorized - list books without token",
          "request": {
            "method": "GET",
            "header": [ { "key": "Accept", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/books", "host": ["{{baseUrl}}"], "path": ["api", "books"] }
          }
        },
        {
          "name": "403 Forbidden - USER tries to create book",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Accept", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Should fail\",\n  \"author\": \"User\",\n  \"isbn\": \"978-00-000000-0-0\",\n  \"publishedYear\": 2020,\n  \"genre\": \"Test\",\n  \"description\": \"User cannot create\",\n  \"totalCopies\": 1,\n  \"availableCopies\": 1\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/books", "host": ["{{baseUrl}}"], "path": ["api", "books"] }
          }
        },
        {
          "name": "404 Not Found - get non-existent book",
          "request": {

# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:15
POSTGRES_CONTAINER_NAME=wypozyczalnia-postgres
POSTGRES_DB=wypozyczalnia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Keycloak PostgreSQL Configuration
KEYCLOAK_POSTGRES_IMAGE=postgres:15
KEYCLOAK_POSTGRES_CONTAINER_NAME=keycloak-postgres
KEYCLOAK_POSTGRES_DB=keycloak
KEYCLOAK_POSTGRES_USER=keycloak
KEYCLOAK_POSTGRES_PASSWORD=keycloak
KEYCLOAK_POSTGRES_PORT=5433

# Keycloak Configuration
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:22.0
KEYCLOAK_CONTAINER_NAME=wypozyczalnia-keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8086
KEYCLOAK_COMMAND="start-dev --import-realm"

# Keycloak Database Configuration
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres-keycloak:5432/keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloak

# Backend Configuration
BACKEND_BUILD_PATH=./wypozyczalnia
BACKEND_CONTAINER_NAME=wypozyczalnia-backend
BACKEND_PORT=8080

# Application Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=wypozyczalnia
DB_USER=postgres
DB_PASSWORD=password

# Keycloak URL for Backend
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_CLIENT_SECRET=

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect

# Keycloak Integration
KEYCLOAK_REALM=wypozyczalnia
KEYCLOAK_RESOURCE=wypozyczalnia-app
KEYCLOAK_AUTH_SERVER_URL=http://localhost:8086
KEYCLOAK_SSL_REQUIRED=external
KEYCLOAK_PUBLIC_CLIENT=true
KEYCLOAK_VERIFY_TOKEN_AUDIENCE=true
KEYCLOAK_USE_RESOURCE_ROLE_MAPPINGS=true
KEYCLOAK_CONFIDENTIAL_PORT=0

# Server Configuration
SERVER_PORT=8080